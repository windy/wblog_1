<tr>
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="text-sm font-medium text-gray-900"><%= member.name %></div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="text-sm text-gray-500"><%= member.phone %></div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= member.monthly? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
      <%= member.monthly? ? t('.monthly') : t('.class_based') %>
    </span>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <% if member.monthly? %>
      <%= l(member.expiry_date, format: :short) if member.expiry_date %>
    <% else %>
      <%= member.remaining_credits %>
    <% end %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <div class="flex space-x-2">
      <%= link_to edit_admin_member_path(member) do %>
        <%= render 'shared/button',
            variant: 'blue',
            content: t('.edit'),
            class: 'w-auto',
            data: { turbolinks: false },
            aria: { label: t('.edit_member', name: member.name) } %>
      <% end %>
      <%= link_to admin_member_path(member),
          method: :delete,
          data: { confirm: t('.confirm_delete') } do %>
        <%= render 'shared/button',
            variant: 'red',
            content: t('.delete'),
            class: 'w-auto',
            aria: { label: t('.delete_member', name: member.name) } %>
      <% end %>
    </div>
  </td>
</tr>
