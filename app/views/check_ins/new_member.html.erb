<div class="min-h-screen bg-gray-100 py-12 px-4">
  <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-8">
    <h1 class="text-2xl font-bold text-center mb-6">
      <%= t('check_in.types.new_member') %>
    </h1>
    
    <%= form_with(model: @check_in, local: true, class: "space-y-6") do |f| %>
      <%= render 'shared/error_message', message: flash[:error] if flash[:error] %>
      
      <div>
        <%= f.label :name, t('check_in.validation.name_label'), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, 
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-muaythai-blue focus:ring-muaythai-blue sm:text-sm",
            placeholder: t('check_in.validation.name_placeholder'),
            required: true %>
      </div>

      <div>
        <%= f.label :membership_type, t('check_in.validation.membership_type_label'), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :membership_type,
            options_for_select([
              [t('check_in.validation.class_based'), 'class_based'],
              [t('check_in.validation.monthly'), 'monthly']
            ]),
            {},
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-muaythai-blue focus:ring-muaythai-blue sm:text-sm" %>
      </div>

      <div>
        <%= f.label :credits, t('check_in.validation.credits_label'), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.number_field :credits,
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-muaythai-blue focus:ring-muaythai-blue sm:text-sm",
            min: 0,
            required: true %>
      </div>

      <%= f.hidden_field :new_member, value: true %>
      
      <div class="mt-6">
        <%= f.submit t('check_in.messages.submit'),
            class: button_classes(variant: 'blue'),
            data: { disable_with: t('shared.button.loading') } %>
      </div>
    <% end %>
  </div>
</div>
