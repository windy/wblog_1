<div class="min-h-screen bg-gray-100 py-12 px-4">
  <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-8">
    <div class="text-center mb-8">
      <div class="flex justify-center mb-4">
        <%= image_tag "muaythai-icon.svg", class: "h-16 w-16 text-muaythai-blue" %>
      </div>
      <h1 class="text-2xl font-bold mb-2"><%= t('check_in.types.regular') %></h1>
      <p class="text-gray-600"><%= t('check_in.messages.welcome') %></p>
    </div>

    <% if @error %>
      <%= render 'shared/error_message', message: @error %>
    <% end %>

    <% if @check_in_status %>
      <%= render 'check_ins/result', status: @check_in_status %>
    <% else %>
      <% if @loading %>
        <%= render 'shared/loading_spinner' %>
      <% else %>
        <%= render 'check_ins/form' %>
      <% end %>
    <% end %>
  </div>
</div>
