<%= form_with(model: @check_in, local: true, class: "space-y-6") do |f| %>
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">
      <%= t('.name') %>
      <span class="text-muaythai-red">*</span>
    </label>
    <%= f.text_field :member_name, 
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-muaythai-blue focus:ring-muaythai-blue sm:text-sm",
        placeholder: t('.name_placeholder'),
        required: true %>
  </div>

  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">
      <%= t('.phone') %>
      <span class="text-muaythai-red">*</span>
    </label>
    <%= f.text_field :phone, 
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-muaythai-blue focus:ring-muaythai-blue sm:text-sm",
        placeholder: t('.phone_placeholder'),
        required: true %>
  </div>

  <%= render 'shared/button', variant: 'blue', type: 'submit', content: t('.submit') %>
<% end %>
